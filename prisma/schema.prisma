generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum ProviderType {
  exhibition
  company
  freelancer
}

enum UserRole {
  client
  serviceProvider
}

model User {
  id             Int          @id @default(autoincrement())
  fullName       String
  phone          String       @unique
  password       String
  role           UserRole
  address        String?
  providerType   ProviderType?
  exhibitionType String?
  specialization String?
  jobTitle       String?
  avgPrice       Float?
  otp            String?
  isVerified     Boolean      @default(false)
  avatar         String?
  createdAt      DateTime     @default(now())
}

